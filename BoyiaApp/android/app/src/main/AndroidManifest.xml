<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.boyia.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <meta-data
        android:name="BOYIA_APP_CHANNEL"
        android:value="${boyiaChannel}"/>

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name="com.boyia.app.BoyiaApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_config"
        android:theme="@android:style/Theme.Light.NoTitleBar"
        android:debuggable="true">
    <!-- android:theme="@android:style/Theme.NoTitleBar.Fullscreen" > -->
        <activity
            android:name="com.boyia.app.BoyiaActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/BoyiaStartStyle"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="com.boyia.app.main.action" />
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.boyia.app.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize"
            android:theme="@style/BoyiaStartStyle"
            android:process="@string/boyia_app_process"
            android:launchMode="singleTask">
        </activity>
    </application>

</manifest>